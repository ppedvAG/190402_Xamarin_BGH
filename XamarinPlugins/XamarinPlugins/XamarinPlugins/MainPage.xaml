<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinPlugins"
             x:Class="XamarinPlugins.MainPage">

    <StackLayout>
        <Button x:Name="buttonFoto" Text="Foto" Clicked="ButtonFoto_Clicked"/>
        <Image x:Name="imageFoto" />

        <Button x:Name="buttonQR" Text="ReadQR" Clicked="ButtonQR_Clicked"/>
        <Entry x:Name="entryQR" Placeholder="Text der zu QR verarbeitet werden soll"/>
        <Button x:Name="buttonGenerateQR" Text="GenerateQR" Clicked="ButtonGenerateQR_Clicked"/>
        <WebView x:Name="webViewQR" HeightRequest="300"/>
    </StackLayout>

</ContentPage>
